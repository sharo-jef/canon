// Comprehensive test for @serialize and action type
@serialize('toString')
struct Person {
    name: string = "John"
    age: int = 30
    
    get toString(): string {
        "${name} (${age})"
    }
}

@serialize('toArray')
struct Point {
    x: int = 0
    y: int = 0
    
    get toArray(): int[] {
        [x, y]
    }
}

