{
  "name": "canon",
  "version": "1.0.0",
  "description": "The definitive canon for your application's configuration, written as declarative, schema-validated code.",
  "main": "src/hierarchy.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:error-handling": "jest --testNamePattern=\"error handling\"",
    "test:legacy": "npx tsx src/test-error-handling.ts",
    "start": "npm run generate && npm run parse:hierarchy && npm run parse:ast",
    "parse": "npm run parse:ast",
    "parse:hierarchy": "npx tsx src/hierarchy.ts && npm run generate:hierarchy-docs",
    "parse:ast": "npx tsx src/ast.ts && npm run generate:ast-docs",
    "generate": "npx antlr4ts -visitor -listener definition/CanonLexer.g4 definition/CanonParser.g4 -o src/generated",
    "generate:hierarchy-docs": "npx tsx src/generate-hierarchy-docs.ts",
    "generate:ast-docs": "npx tsx src/generate-ast-docs.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "js-yaml": "^4.1.0"
  }
}
