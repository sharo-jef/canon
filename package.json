{
  "name": "canon",
  "version": "1.0.0",
  "description": "The definitive canon for your application's configuration, written as declarative, schema-validated code.",
  "main": "src/parser.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:error-handling": "jest --testNamePattern=\"error handling\"",
    "test:legacy": "npx tsx src/test-error-handling.ts",
    "test:semantic": "powershell -ExecutionPolicy Bypass -File tmp/test-semantic-analyzer.ps1",
    "start": "npm run generate && npm run parse:ast",
    "parse": "npx tsx src/parser.ts definition/schema.canon && npm run generate:ast-docs",
    "parse:config": "npx tsx src/parser.ts definition/config.canon && npm run generate:ast-docs",
    "parse:file": "npx tsx src/parser.ts",
    "generate": "npx antlr4ts -visitor -listener definition/CanonLexer.g4 definition/CanonParser.g4 -o src/generated",
    "generate:ast-docs": "npx tsx src/generate-ast-docs.ts",
    "analyze": "npx tsx src/semantic-analyzer.ts",
    "analyze:debug": "$env:DEBUG='true'; npx tsx src/semantic-analyzer.ts",
    "parse:analyze": "npm run parse && npm run analyze",
    "analyze:file": "npx tsx src/semantic-analyzer.ts",
    "full-pipeline": "npm run generate && npm run parse && npm run analyze",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "js-yaml": "^4.1.0"
  }
}
